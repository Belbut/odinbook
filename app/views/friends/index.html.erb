<h1>Friends#index</h1>
<p>Find me in app/views/friends/index.html.erb</p>

<% if current_user == @user %>
    <h2>Friends Requests</h2>
    <% @pending_incoming_fr_users.each do |user| %>
        <%= render user.profile %>
    <% end %>
    <h2>Friends Pending</h2>
    <% @pending_outgoing_fr_users.each do |user| %>
        <%= render user.profile %>
    <% end %>
<% end %>

<h2>Friends with <%= @user_friends.size %></h2>
<% @user_friends.each do |friend| %>
    <%= render friend.profile %>
<% end %>
