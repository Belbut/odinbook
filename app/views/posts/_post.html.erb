<div class="post">
    <section class= "heading" >
        <div>
            <span><%= render  partial: "profiles/avatar_link", locals: { user: post_author } %></span>
            <span><%= link_to(profile.name, user_profile_path(post_author))%></span>
            <span> Post Title </span>
        </div>
        <div><%= post.updated_at.to_date.to_fs(:long_ordinal)%></div>
    </section>
    <section>
        <div><%=post.body%></div>
        <%preview_attachments(post).each_with_index do |attachment, index| %>
            <%= attachment.representation %>
            <%= not_displayed_attachments(post) if index == 4 %>
        <%end%>
    </section>
</div>
