<div class="comment">
    <% if defined?(class_append) %>
        <div class="<%= class_append %>">
    <% end %>

        <%= render "profiles/user_identity_header", user: comment.author %>
        <%= comment.body %>
        <div class="reactions">
            <%= button_to "Like" %>
            <%= button_to "Reply" %>
            <%= link_to "Edit Comment", edit_comment_path(comment) if comment.author == current_user %>
        </div>
    <% if defined?(class_append) %>
        </div>
    <% end %>
</div>
